#!/usr/bin/env bash
# Kill the '7-highlander' process using pkill
PID=$(pgrep -f "7-highlander")

# Check if the process was found
if [ -n "$PID" ]; then
    # Attempt to terminate the process
    kill "$PID"
    
    # Check if the kill command was successful
    if kill "PID"; then
        echo "OK"
    else
        echo "Failed to stop 7-highlander process."
    fi
else
    echo "7-highlander process not found."
fi
